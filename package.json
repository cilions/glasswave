{
  "name": "glasswave",
  "version": "0.1.3",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && pnpm exec postcss index.css -o dist/index.css",
    "dev": "tsc --watch & pnpm exec postcss index.css -o dist/index.css --watch",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "dependencies": {
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "postcss-cli": "^11.0.1",
    "typescript": "^5.5.0"
  }
}
